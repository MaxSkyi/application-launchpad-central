
{
  "appId": "com.applicationhub.app",
  "productName": "Application Hub",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": "nsis",
    "icon": "public/favicon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
